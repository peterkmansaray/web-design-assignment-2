<!-- JAVASCRIPT SEARCH -->
<script>
function searchPlayers(){
    let input = document.getElementById('playerSearch').value.toLowerCase();
    let players = document.getElementsByClassName('player');

    for(let i = 0; i < players.length; i++){
        let name = players[i].innerText.toLowerCase();
        players[i].style.display = name.includes(input) ? "" : "none";
    }
}

function searchMatches(){
    let input = document.getElementById('matchSearch').value.toLowerCase();
    let matches = document.getElementsByClassName('match');

    for(let i = 0; i < matches.length; i++){
        let fixture = matches[i].innerText.toLowerCase();
        matches[i].style.display = fixture.includes(input) ? "" : "none";
    }
}
</script>

